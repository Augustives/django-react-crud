  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run API",
      "type": "python",
      "request": "launch",
      "program": "backend/src/manage.py",
      "args": ["runserver"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Current File Python",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Current File Node",
      "program": "${file}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}
